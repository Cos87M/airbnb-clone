<div data-controller=share-modal
     data-share-url="<%= url_for(only_path: false) %>"
>
  <div class="flex mb-2">
    <div data-modal-target = "closeButton"
        class="absolute top-4 right-4">
      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-4 h-4" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
      </svg>
    </div>
  </div>
  <div>
    <p class="text-xl font-medium  mb-4">Share this property </p>
    <div class="mb-4">
      <div class="relative flex items-center space-x-3">
        <div class="flex-shrink-0">
          <% if @property.main_image.attached? %>
              <%= image_tag @property.main_image, class: "block h-14 w-14 w-full rounded-lg" %>
          <% end %>
        </div>
        <div class="flex-1 min-w-0">
          <p class="text-lg font-gray text-gray-900"><%= @property.name %></p>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">

      <div data-action="click->share-modal#copyLink"
           class="cursor-pointer relative rounded-lg flex items-center space-x-3 border border-gray-300 bg-white px-4 py-5 shadow-sm hover:bg-gray-200 ">
        <div class="flex-shrink-0">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-10 h-10 mr-4 rounded-lg">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 01-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 011.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 00-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 01-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 00-3.375-3.375h-1.5a1.125 1.125 0 01-1.125-1.125v-1.5a3.375 3.375 0 00-3.375-3.375H9.75" />
          </svg>

        </div>
        <div class="flex-1 min-w-0">
          <p class="text-md font-medium text-gray-900">Copy Link</p>
        </div>
      </div>
    </div>

  </div>
</div>
