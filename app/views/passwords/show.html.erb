<h4 class="mt-1 text-md text-gray-500">Update your Password</h4>
<hr class="my-4">
<%= form_with model: @user, scope: :password, local: true, url: password_path(@user) do |f| %>

  <div class="flex flex-col">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.password_field :password, class: "h-10 border border-gray-300 rounded px-4 py-2 w-full sm:text-sm focus:outline-none focus:ring-gray-900 focus:border-gray-900" %>
  </div>

  <div class="flex justify-end mt-4">
    <button class="bg-gray-400 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">Update</button>
  </div>

<% end %>
