<div class="grid py-12 px-12 min-h-fit place-items-center">
  <div class="w-11/12 p-12 bg-white sm:w-8/12 md:w-1/2 lg:w-5/12">
    <h1 class="text-xl font-semibold">Hello there , <span class="font-normal">please fill in your information to continue</span></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-6" }) do |f| %>
      <div class="block mt-2 text-xs font-semibold text-gray-600">
        <%= f.label :email, "E-mail", class: "block mt-2 text-xs font-semibold text-gray-600" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.email_field :email, autocomplete: "email", placeholder: "example@domain.com", class: "block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner", required: true %>

        <%= f.label :password, :password, class: "block mt-2 text-xs font-semibold text-gray-600" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "********", class: "block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner", required: true %><br><br/>

        <%= f.label :password_confirmation, :Password_confirmation, class: "block mt-2 text-xs font-semibold text-gray-600" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "********", class: "block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner", required: true %>
      </div>

      <button type="submit" class="w-full py-3 mt-6 font-medium tracking-widest bg-black shadow-lg focus:outline-none hover:bg-gray-500 hover:shadow-none">
        <%= f.submit "Sign up", class: "airbnb-pink-gradient" %>
      </button>
    <% end %>

    <p class="flex justify-between inline-block mt-4 text-xs text-gray-500 cursor-pointer hover:text-black">
      <%= link_to "Already registered?", new_user_session_path %>
    </p>
  </div>
</div>
