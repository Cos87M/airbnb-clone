<!-- Modal -->
<div class="relative z-10"
    data-controller="modal"
    id="modal-wrapper"

    aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <%# <div class="hidden" id="modal-trigger" data-action="click->modal#showModal"></div> %>

  <div id="modal-backdrop" class="hidden flex  rounded-lg shadow-lg overflow-hidden mx-auto items-end justify-center min-h-screen px-4 text-center md:items-center sm:block sm:p-0"
        x-transition:enter="transition ease-out duration-300 transform"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-200 transform"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 transition-opacity bg-red-200 bg-opacity-40">

        <div id="modal-panel"
          x-transition:enter="transition ease-out duration-300 transform"
          x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
          x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
          x-transition:leave="transition ease-in duration-200 transform"
          x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
          x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
          class="hidden inline-block w-full max-w-xl p-8 my-20 overflow-hidden text-left transition-all transform bg-white rounded-lg shadow-xl 2xl:max-w-2xl">

            <p class="text-xl text-gray-600 text-center"> Welcome back!</p>
            <a href="#" class="flex items-center justify-center mt-4 text-white rounded-lg shadow-md hover:bg-gray-100">
                <div class="text-center  py-2">
