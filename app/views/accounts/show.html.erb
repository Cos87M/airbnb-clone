
<%= form_with model: @user, scope: :account, local: true, url: account_path(@user) do |f| %>

  <div class="flex flex-col">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.email_field :email, class: "h-10 border border-gray-300 rounded px-4 py-2 w-full sm:text-sm focus:outline-none focus:ring-gray-900 focus:border-gray-900" %>
  </div>

  <div class="flex justify-end mt-4">
    <button class="bg-gray-400 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">Update</button>
  </div>

<% end %>
