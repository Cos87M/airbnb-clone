<body class="bg-gray-300">
  <div class="container mx-auto mt-20 bg-gray-100">
    <div class="max-w-7xl pb-10 lg:py-12 lg:px-8" >

      <div class="flex justify-center mt-8">
          <!-- Sidebar -->
          <div class="text-black w-1/3 p-4" id="sidebar">
            <div class="list-group space-y-2">
              <a href="#" class="block py-2 px-4" data-target="profile">Profile</a>
              <a href="#" class="block py-2 px-4" data-target="account">Account</a>
              <a href="#" class="block py-2 px-4" data-target="password">Password</a>
              <a href="#" class="block py-2 px-4" data-target="plan-billing">Plan & Billing</a>
            </div>
          </div>

          <!-- Main Content -->
          <div class="w-2/3 p-4" id="main-content">
            <div class="card">
              <div class="card-body">
                <!-- Your Profile Section -->
                <div class="content" id="profile">
                  <h4>Your Profile</h4>
                  <hr class="my-4">
                  <form>
                    <div class="grid gap-4 gap-y-2 text-sm grid-cols-1 lg:grid-cols-3">

                      <div class="lg:col-span-2">
                        <div class="grid gap-4 gap-y-2 text-sm grid-cols-1 md:grid-cols-5">
                          <div class="md:col-span-5">
                            <label for="full_name">Full Name</label>
                            <input type="text" name="full_name" id="full_name" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50" value="" />
                          </div>

                          <div class="md:col-span-5">
                            <label for="email">Email Address</label>
                            <input type="text" name="email" id="email" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50" value="" placeholder="email@domain.com" />
                          </div>

                          <div class="md:col-span-3">
                            <label for="address">Address / Street</label>
                            <input type="text" name="address" id="address" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50" value="" placeholder="" />
                          </div>

                          <div class="md:col-span-2">
                            <label for="city">City</label>
                            <input type="text" name="city" id="city" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50" value="" placeholder="" />
                          </div>

                          <div class="md:col-span-3">
                            <label for="country">Country</label>
                            <div class="h-10 bg-gray-50 flex border border-gray-200 rounded items-center mt-1">
                              <input name="country" id="country" placeholder="Country" class="px-4 appearance-none outline-none text-gray-800 w-full bg-transparent" value="" />
                              <button tabindex="-1" class="cursor-pointer outline-none focus:outline-none transition-all text-gray-300 hover:text-red-600">
                                <svg class="w-4 h-4 mx-2 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                  <line x1="18" y1="6" x2="6" y2="18"></line>
                                  <line x1="6" y1="6" x2="18" y2="18"></line>
                                </svg>
                              </button>
                              <button tabindex="-1" for="show_more" class="cursor-pointer outline-none focus:outline-none border-l border-gray-200 transition-all text-gray-300 hover:text-blue-600">
                                <svg class="w-4 h-4 mx-2 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="18 15 12 9 6 15"></polyline></svg>
                              </button>
                            </div>
                          </div>

                          <div class="md:col-span-2">
                            <label for="zipcode">Zipcode</label>
                            <input type="text" name="zipcode" id="zipcode" class="transition-all flex items-center h-10 border mt-1 rounded px-4 w-full bg-gray-50" placeholder="" value="" />
                          </div>

                          <div class="md:col-span-5 text-right">
                            <div class="inline-flex items-end">
                              <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Submit</button>
                            </div>
                          </div>

                        </div>
                      </div>
                    </div>
                  </form>
                </div>

                <!-- Other Content Sections -->
                <div class="content hidden" id="account">
                  <!-- Account content -->

                  <form action="#" method="POST">
                    <div class="flex mb-4">
                      <div class="w-1/2 mr-2">
                        <label for="plan-billing-firstname" class="block font-semibold">First Name</label>
                        <input id="plan-billing-firstname" name="name" placeholder="First Name" class="form-input w-full"
                          type="text">
                      </div>
                      <div class="w-1/2 ml-2">
                        <label for="plan-billing-lastname" class="block font-semibold">Last Name</label>
                        <input id="plan-billing-lastname" name="lastname" placeholder="Last Name"
                          class="form-input w-full" type="text">
                      </div>
                    </div>

                    <div class="mb-4">
                      <label for="email" class="block font-semibold">Email*</label>
                      <input id="email" name="email" placeholder="Email" class="form-input w-full" required type="text">
                    </div>
                    <div class="mb-4">
                      <label for="newpass" class="block font-semibold">New Password</label>
                      <input id="newpass" name="newpass" placeholder="New Password" class="form-input w-full" type="text">
                    </div>
                    <div class="flex justify-end">
                      <button name="submit" type="submit"
                        class="btn btn-primary block px-4 py-2 mt-2 bg-transparent rounded-lg text-sm font-semibold md:mt-0 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline">Update My
                        Profile</button>
                    </div>
                  </form>

                </div>
                <div class="content hidden" id="password">
                  <!-- Password content -->
                  <form>
                    <div class="mb-4">
                      <label for="password_change" class="block">Old Password</label>
                      <input type="password_change" id="password_change" placeholder="Password" class="h-10 border mt-1 rounded px-4 w-full bg-gray-50">
                    </div>
                    <div class="mb-4">
                      <label for="newpass" class="block">New Password</label>
                      <input id="newpass" name="newpass" placeholder="New Password" class="form-input w-full" type="text">
                    </div>
                    <div class="flex justify-end">
                      <button name="submit" type="submit"
                        class="btn btn-primary block px-4 py-2 mt-2 bg-transparent rounded-lg text-sm font-semibold md:mt-0 hover:text-gray-900 focus:text-gray-900 hover:bg-gray-200 focus:bg-gray-200 focus:outline-none focus:shadow-outline">
                        Save changes
                    </button>
                    </div>
                  </form>
                </div>

                <div class="content hidden" id="plan-billing">
                  <!-- Plan & Billing content -->
                  <h4>Payment details</h4>
                  <hr class="my-4">

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>


  <script>
    // JavaScript to handle sidebar navigation and content
    const sidebarLinks = document.querySelectorAll('#sidebar a');
    const contents = document.querySelectorAll('.content');

    sidebarLinks.forEach((link) => {
      link.addEventListener('click', (event) => {
        event.preventDefault();
        const target = link.getAttribute('data-target');
        sidebarLinks.forEach((item) => item.classList.remove('active'));
        link.classList.add('active');
        contents.forEach((content) => content.classList.add('hidden'));
        document.getElementById(target).classList.remove('hidden');
      });
    });
  </script>
</body>
